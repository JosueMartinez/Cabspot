@{
    
    ViewBag.Title = "Cabspot";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/admin")
    @Scripts.Render("~/bundles/modernizr")
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.css" rel="stylesheet">    

</head>
<body>
    <div id="wrapper">

        <!--INICIO MENU-->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Cabspot", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            @*<ul class="nav navbar-text navbar-right">
                <li><strong>@greetings @username.ToLower()</strong></li>
            </ul>*@

            <div class="navbar-inverse sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        @*<li class="sidebar-search">
                            <div class="input-group custom-search-form">
                                <a href="@Url.Action("Index", "Home")" class="fa fa-home"> Home</a>
                            </div>
                        </li>*@
                        <li><a href="@Url.Action("Index", "Home")" class="fa fa-home fa-2x"> Inicio</a></li>
                        @* SITES MENU *@
                        <li>
                            <a href="#" class="fa fa-map-marker">  Bases<span class="fa arrow"></span></a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="@Url.Action("Add", "Site")" class="fa fa-plus"> Añadir Base</a>
                                </li>
                                
                            </ul>
                        </li>
                        @* About *@
                        <li><a href="@Url.Action("About", "Home")" class="fa fa-info-circle"> About</a></li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
        </nav>
        <!--FIN MENU -->
        <div id="page-wrapper" >
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        @RenderBody()
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
            </div>
            <!-- /.container-fluid -->
            @* Footer *@
            <div class="navbar navbar-inverse navbar-fixed-bottom">
                <div class="container">
                    <p class="navbar-text pull-left">
                        © 2015 - Cabpost
                    </p>
                    <p class="navbar-text pull-right">
                        <span class="fa fa-code"></span>  Desarrolado Por Josué Martínez &amp; Jordani Rozón
                    </p>
                </div>
            </div>
            @* Footer END *@

        </div>
    </div>
    <script>
        $("#menu-toggle").click(function(e) {
             e.preventDefault();
             $("#wrapper").toggleClass("toggled");
         });
    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/admin")
    @RenderSection("scripts", required: false)
</body>
</html>
