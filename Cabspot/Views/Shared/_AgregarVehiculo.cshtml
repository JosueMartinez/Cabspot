                @Html.LabelFor(model => model.vehiculo.chasis, htmlAttributes: new { @class = "control-label" }) <span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6">
                @Html.EditorFor(model => model.vehiculo.chasis, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.vehiculo.chasis, "", new { @class = "text-danger" })
            </div>
        </div>
        @* Placa *@
        <div class="form-group">
            <label class="control-label col-md-3 col-sm-3">
                @Html.LabelFor(model => model.vehiculo.placa, htmlAttributes: new { @class = "control-label" }) <span class="required">*</span>
            </label>
            <div class="col-md-6 col-sm-6">
                @Html.EditorFor(model => model.vehiculo.placa, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.vehiculo.placa, "", new { @class = "text-danger" })
            </div>
        </div>
