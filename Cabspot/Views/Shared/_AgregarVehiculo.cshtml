@model Cabspot.Models.taxistas


@using (Html.BeginForm("AgregarVehiculo","taxistas", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.idTaxista)
    @Html.HiddenFor(model => model.codigoTaxista)
    
   
    <div class="form-horizontal form-label-left">
        <span class="section">Información del Vehículo</span>
        @* Chasis *@
        <div class="form-group">
