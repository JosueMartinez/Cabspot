@model IEnumerable<Cabspot.Models.empleados>

@{
    ViewBag.controller = "Empleados";
    ViewBag.action = "Listado Empleados";
    Layout = "~/Views/Shared/_Layout.cshtml";

    //lanzando notificacion de exito
    if (TempData["success"] != null)
    {
        <script type="text/javascript">
            var permanotice, tooltip, _alert;
            $(function () {
                new PNotify({
                    title: "Exito",
                    type: "success",
                    text: "Exito! se ha agregado nuevo empleado",
                    nonblock: {
                        nonblock: true
                    },
                    before_close: function (PNotify) {
                        // You can access the notice's options with this. It is read only.
                        //PNotify.options.text;

                        // You can change the notice's options after the timer like this:
                        PNotify.update({
                            title: PNotify.options.title + " - Enjoy your Stay",
                            before_close: null
                        });
                        PNotify.queueRemove();
                        return false;
                    }
                });
            });
        </script>
    }
}


<p>
    @Html.ActionLink("Nuevo Empleado", "Create", null, new { @class = "btn btn-primary" })
</p>
<table id="example" class="table table-striped responsive-utilities jambo_table">
    <thead>
        <tr class="headings">
            <th class="text-center">
                @Html.DisplayNameFor(model => model.personas.nombres)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.personas.apellidos)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.roles.rol)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.estadoempleados.estadoEmpleado)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.personas.nombres)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.personas.apellidos)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.roles.rol)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.estadoempleados.estadoEmpleado)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.usuario)
                </td>
                <td class="text-center">
                    @Html.ActionLink(" ", "Edit", "Taxistas", new { id = item.idEmpleado }, new { @class = "fa fa-edit" }) |
                    @Html.ActionLink(" ", "Details", "Taxistas", new { id = item.idEmpleado }, new { @class = "fa fa-eye" }) |
                    @Html.ActionLink(" ", "Delete", "Taxistas", new { id = item.idEmpleado }, new { @class = "fa fa-trash" })
                </td>
            </tr>
        }
    </tbody>
</table>
